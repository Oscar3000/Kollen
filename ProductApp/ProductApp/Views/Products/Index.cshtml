@model IEnumerable<Product>
@{
    ViewBag.Title = "Index";
}

<div class="container mb2">
    <div class="right">
        <div>
            <h6>Cart</h6><i class="material-icons">add_shopping_cart</i>
        </div>
    </div>
</div>


@using (Html.BeginForm("Index", "Products", FormMethod.Post))
{
    <div class="container">
        <div class="row">
            <div class="col s8 l8 m8 mt3">
                <div class="input-field">
                    @Html.TextBox("SearchString", "", new { @id = "searchString" })
                    <label>Search For Product</label>
                </div>
             </div>
             <div class="col l4 m4 s4">
                    <button class="btn btn-large waves-ripple waves-effect waves-light">
                        <i class="material-icons">search</i>
                   </button>
            </div>
        </div>
        <div class="row">
            <div class="col l3 m4 s12 input-field">
                @Html.DropDownList("ProductType", new SelectList(Enum.GetValues(typeof(ProType))), "Product Type", new { @class= "browser-default" })
            </div>
            <div class="col l3 m4 s12 input-field">
                @Html.DropDownList("Category",new SelectList(Enum.GetValues(typeof(Category))), "Select Category", new { @class = "browser-default" })
            </div>
            <div class="col l3 m4 s12 input-field">
                @Html.DropDownList("PriceRange",new SelectList(new string[] { "> 100", "< 100"}),"Select Price Range", new { @class = "browser-default" })
            </div>
        </div>
    </div>
}

<div class="container">
    <div id="ProductList">
        @Html.Partial("ProductList", Model)
    </div>
</div>


