<div class="row">
    @foreach(var item in Model)
    {
       var ConvertToBase64 = Convert.ToBase64String(item.Picture);
       var imgSrc = string.Format("data:image/jpeg;base64, {0}", ConvertToBase64);
        <div class="col s12 l4 m6">
            <div class="card">
                   <div class="card-image">
                       <img src='@imgSrc' />
                   </div>
                   <div class="card-content">
                       <h3 class="card-title">@Html.DisplayFor(n=>item.Name)</h3>
                       <p>
                           Price: @Html.DisplayFor(n=>item.Price)
                       </p>
                       <p>
                           Stock: @Html.DisplayFor(n=>item.Stocks)
                       </p>
                   </div>
            </div>
        </div>
    }
</div>